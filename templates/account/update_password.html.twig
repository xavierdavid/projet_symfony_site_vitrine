{% extends "base.html.twig" %}

{% block title %}Modification du mot de passe{% endblock %}

{% block body %}
<main class="container">
  <section class="section-authentification-form">
    <div class="authentification-container">
      <div class="authentification-text-box">
        <header>
          <h1 class="heading-primary">Changer mon mot de passe</h1>
        </header>
        <p class="authentification-text">
            Utilisez le formulaire pour modifier le mot de passe de votre compte ... 
        </p>
        {# Formulaire de modification du mot de passe #}
        <section class="form-container">
          {{form_start(formView, {'attr' : {'class': 'authentification-form'}})}}
            <div class="form-row">
              <p class="subheading">Mes informations : </p>
              <br>
              {{form_row(formView.email)}}
              {{form_row(formView.firstname)}}
              {{form_row(formView.lastname)}}
            </div>
            <div class="form-row">
              <p class="subheading">Modifier mon mot de passe : </p>
              <br>
              {{form_row(formView.old_password)}}
              {{form_row(formView.new_password)}}
            </div>
            {# Bouton de soumission du formulaire #}
            <button class="btn btn--form" type="submit">Envoyer</button>
          {{form_end(formView)}}
        </section>
        {# Lien vers la route de la page d'accueil du compte de l'utilisateur #}
        <section>
          <ul class="authentification-nav-list">
            <li class="authentification-list">
              <ion-icon class="icon icon-secondary" name="play-back"></ion-icon>
              <span>
                  <a href="{{path('app_account_home')}}">Retour vers mon compte</a>
              </span>
            </li>
          </ul>
        </section>
      </div>
      <div class="authentification-img-box" role="img" aria-label="Hubble telescope dans l'espace">   
      </div>
    </div>
  </section>
</main>
{% endblock %}