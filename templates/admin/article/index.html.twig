{% extends 'admin/base.html.twig' %}

{% block title %}Interface d'administration{% endblock %}

{% block body %}
<main class="container">
    <header>
        <h1>Interface d'administration</h1>
    </header>
    <article class="admin-container">
        <section>
            <header>
                <h3>Articles</h3>
            </header>
            {# Inclusion du aside #}
            {% include "admin/partials/_aside.html.twig" %}
        </section>
        <section>
            <header>
                <h2>Liste des articles</h2>
            </header>
            <aside>
                <h4>Filter les articles</h4>
                {# Formulaire de recherche d'objets Article #}
                <section>
                    {{form_start(formView)}}
                    {{form_row(formView.string)}}
                    <br>
                    {{form_row(formView.category)}}
                    <br>
                    {{form_row(formView.priorityOrder)}}
                    <br>
                    <button type="submit">Filtrer</button>
                    {{form_end(formView)}}
                </section>
            </aside>
            <br>
            <section>
                <p>Nombre d'articles : <strong>{{articlesData|length}}</strong></p>
                {# Tableau des objets Article #}
                <table>
                    <colgroup span="3"></colgroup>
                    <thead>
                        <tr>
                            <th>Titre</th>
                            <th>Créé par</th>
                            <th>Mis à jour le</th>
                            <th>Image de couverture</th>
                            <th>A la une</th>
                            <th>Priorité de publication</th>
                            <th colspan="3" scope="colgroup">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for article in articles %}
                            <tr>
                                <th>{{article.title}}</th>
                                <td>{{article.getUser.firstName|capitalize}} {{article.getUser.lastName|upper}}</td>
                                <td>{{article.updatedAt|format_datetime(locale='fr', timezone='Europe/Paris')}}</td>
                                <td>
                                    {% if article.coverImage %}
                                        <a href="{{asset('uploads/'~article.coverImage)}}" target="_blank"><img src="{{asset('uploads/'~article.coverImage)}}" alt="{{article.title}}" class="smallSizeImage"></a>
                                    {% endif %}
                                </td>
                                <td>{{article.isFrontPage}}</td>
                                <td>{{article.priorityOrder}}</td>
                                {# Actions #}
                                <td>
                                    <a type="button" href="{{path('app_admin_article_detail', {'slug':article.slug})}}"><i class="fas fa-eye"></i> Voir</a>
                                </td>
                                <td>
                                    <a type="button" href="{{path('app_admin_article_edit', {'slug':article.slug})}}"><i class="fas fa-pen"></i> Modifier</a>
                                </td>
                                <td>
                                    <a type="button" href="{{path('app_admin_article_delete', {'slug':article.slug})}}" class="modal-trigger"  data-token="{{csrf_token('delete' ~ article.slug)}}" data-message="Confirmez-vous la suppression de l'article '{{article.title}}' ?" ><i class="fas fa-trash-alt"></i> Supprimer</a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
                <br>
                {# Pagination des objets article #}
                <section>
                    <nav class="pagination">
                        {{knp_pagination_render(articles)}}
                    </nav>
                </section>
                <section>
                    <br>
                    <a href="{{path('app_admin_article_new')}}"><i class="fas fa-plus"></i> Ajouter un article</a>
                    <br>
                    <p><a href="{{path('app_admin_home')}}"><i class="fas fa-backward"></i> Retour</a></p>
                </section>
            </section>
        </section>
    </article>
</main>
{% endblock %}
