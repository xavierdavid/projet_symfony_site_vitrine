{% extends 'admin/base.html.twig' %}

{% block title %}Interface d'administration{% endblock %}

{% block body %}
<main>
    <header>
        <h1>Interface d'administration</h1>
    </header>
    <article>
        <header>
            <h3>Documents</h3>
        </header>
        {# Inclusion du aside #}
        {% include "admin/partials/_aside.html.twig" %}
        <section>
            <header>
                <h2>Création d'un nouveau document</h2>
            </header>
            <br>
            <section>
                {# Formulaire de création d'un objet Document #}
                {{form_start(formView)}}
                {{form_row(formView.name)}}
                {{form_row(formView.documentFile)}}
                {{form_row(formView.caption)}}
            </section>
            <section>
                <button type="submit">Créer le document</button>
                {{form_end(formView)}}
            </section>
        </section>
    </article>
</main>
{% endblock %}



