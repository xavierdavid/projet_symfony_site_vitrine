{% extends 'admin/base.html.twig' %}

{% block title %}Interface d'administration{% endblock %}

{% block body %}
<main class="container">
    <header>
        <h1>Interface d'administration</h1>
    </header>
    <product class="admin-container">
        <section>
            <header>
                <h3>Services</h3>
            </header>
            {# Inclusion du aside #}
            {% include "admin/partials/_aside.html.twig" %}
        </section>
        <section>
            <header>
                <h2>Modification d'un service</h2>
            </header>
            <br>
            <section>
                {# Formulaire de modification d'un objet Product #}
                {{form_start(formView)}}
                {{form_row(formView.name)}}
                {{form_row(formView.shortDescription)}}
                <br>
                {{form_row(formView.description)}}
                <br>
                {{form_row(formView.coverImage)}}
                {# Affichage de l'image de couverture de l'objet Product à modifier #}
                {% if product.coverImage %}
                    <figure>
                        <img src="{{asset('uploads/'~product.coverImage)}}" alt="{{product.name}}" class="mediumSizeImage">
                    </figure>
                {% endif %}
                {{form_row(formView.priorityOrder)}}
            </section>
            <section>
              <header>
                <h4>Objets associés</h4>
              </header>
                {{form_row(formView.documents)}}
                <br>
                {{form_row(formView.images)}}
                {# Affichage des objets Image associés à l'objet Product à modifier #}
                {% for image in images %}
                  <figure>
                    <img src="{{asset('uploads/'~image.imageFile)}}" alt="{{image.caption}}" class="smallSizeImage">
                    <figcaption><small>{{image.mediaTitle}}</small></figcaption>
                  </figure>
                {% endfor %}
            </section>
            <section>
                <br>
                <button type="submit">Modifier le service</button>
                {{form_end(formView)}}
            </section>
            <br>
            <section>
                <p><a href="{{path('app_admin_product_index')}}"><i class="fas fa-backward"></i> Retour</a></p>
            </section>
        </section>
    </product>
</main>
{% endblock %}