{# Header #}
<header>
  <nav>
    <section>
      <a href="{{path('app_home')}}">Accueil</a>
      <a href="#">A propos</a>
      <a href="#">Services</a>
      <a href="#">Actualités</a>
      <a href="#">Contact</a>
    </section>
    <section>
      <ul>
          {# Affichage des liens en fonction du statut d'authentification de l'utilisateur #}
          {% if app.user %}
              <li><a href="{{path('app_logout')}}"><i class="fas fa-sign-out-alt"></i> Deconnection</a></li>
              <li><a href="#"><i class="fas fa-user"></i> Mon compte</a></li>
          {% else %}
            <li><a href="{{path('app_login')}}"><i class="fas fa-sign-in-alt"></i> Connection</a></li>
          {% endif %}
            
          {# Accès aux pages d'administration si l'utilisateur a le rôle Admin #}
          {% if is_granted('ROLE_ADMIN')%} 
              <li><a href="{{path('app_admin_home')}}"><i class="fas fa-unlock"></i> Accéder au back-office</a></li>
          {% endif %}
      </ul>
    </section>
  </nav>
</header>