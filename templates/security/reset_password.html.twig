{% extends "base.html.twig" %}

{% block title %}Réinitialisation du mot de passe oublié{% endblock %}

{% block body %}
<main class="container">
  <section class="section-authentification-form">
    <div class="authentification-container">
      <div class="authentification-text-box">
        <header>
          <h1 class="heading-primary">Réinitialisation de votre mot de passe</h1>
        </header>
        <p class="authentification-text">
            {{user.firstname}}, merci de bien vouloir saisir un nouveau mot de passe : 
        </p>
        {# Formulaire de réinitialisation du mot de passe #}
        <section class="form-container">
          {{form_start(formView, {'attr' : {'class': 'authentification-form'}})}}
            <div class="form-row">
              {{form_row(formView.new_password)}}
            </div>
            <br>
            <button class="btn btn--form" type="submit">Réinitialiser</button>
          {{form_end(formView)}}
        </section>
        {# Lien de retour vers le formulaire de login #}
        <section>
          <ul class="authentification-nav-list">
            <li class="authentification-list">
              <ion-icon class="icon icon-secondary" name="play-back"></ion-icon>
              <span>
                  <a href="{{path('app_login')}}">Retour vers la page de connexion</a>
              </span>
            </li>
          </ul>
        </section>
      </div> 
      <div class="authentification-img-box" role="img" aria-label="Hubble telescope dans l'espace">   
      </div>  
    </div>
  </section>   
</main>
{% endblock %}